<div class="row row-cols-1 row-cols-md-2 g-4">
  <div class="col order-md-2">
    <h1>{{title}}</h1>
    <h3>{{publicationYear}} - {{genre}}</h3>
    <p>{{description}}</p>

    <div class="d-flex">
      <a class="btn btn-success me-2" href="/games/{{_id}}/edit">Edit</a>
      <form action="/games/{{_id}}/delete" method="POST">
        <button class="btn btn-danger">Delete</button>
      </form>
    </div>
  </div>
  <div class="col order-md-1">
    <img class="img-fluid" src="{{image}}">
  </div>
</div>